@model List<ApplicationUser>;

@{
    ViewData["Title"] = "User List";
}

<h3>Manage access</h3>
<br />
<form asp-controller="Home" asp-action="manage" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Authorised</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Name</td>
                    <td>
                        <input type="hidden" name="selectedUsers[@i].Id" value="@Model[i].Id" />
                        <input type="hidden" name="selectedUsers[@i].Name" value="@Model[i].Name" />
                        <input type="checkbox" name="selectedUsers[@i].isAuthorized" value="true" @(Model[i].isAuthorized ? "checked" : "") />
                     
                    </td>

            <td>
                    <input type="checkbox" name="selectedUsers[@i].Roles" value="Admin" @(Model[i].Roles.Contains("Admin") ? "checked" : "") />
            </td>
                    

                </tr>
            }
        </tbody>
    </table>

    <button class="btn-dark" type="submit">Process Selected Users</button>
</form>

